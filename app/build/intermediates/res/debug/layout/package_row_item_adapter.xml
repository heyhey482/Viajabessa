<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_row_background">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/packageDestinationImageView"
        android:src="@drawable/rio_de_janeiro"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:background="@drawable/gradient"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/packageDestinationImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">


        <TextView
            android:layout_marginLeft="@dimen/half_default_between_views"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/rio_de_janeiro"
            android:id="@+id/packageNameTextView"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/typePackageImageView"
            android:layout_toEndOf="@+id/typePackageImageView" />

        <ImageView
            android:layout_marginLeft="@dimen/half_default_between_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typePackageImageView"
            android:src="@drawable/airplane"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="@dimen/default_magin_between_views"
        android:layout_marginTop="@dimen/half_default_between_views"
        android:paddingBottom="@dimen/default_magin_between_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="R$ 230,00"
        android:textColor="@color/yellow"
        android:id="@+id/packageValueTextView"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout><!-- From: file:/C:/Users/user/Documents/Viajabessa/app/src/main/res/layout/package_row_item_adapter.xml -->